---
import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { Terminal } from "lucide-react";

import SampleReactComponent from "@/components/SampleReactComponent.jsx";
import TeamMembers from "@/components/TeamMembers.tsx";
import CodingPractices from "@/components/CodingPractices.tsx";
---

<Layout title="Astro + React">
  <main class="flex flex-col items-center justify-center md:my-12">
    <div class="w-full md:w-3/5 sm:w-4/5 sm:space-y-8">
      <figure class="w-full px-12 py-4 md:outline md:outline-1 md:rounded-md">
        <h1 class="text-3xl mt-4">
          An <strong>Astro + React</strong> webpage!
        </h1>
        <p class="my-4">
          It includes <span class="text-2xl underline"
            ><a href="https://ui.shadcn.com/">shadcn-ui</a></span
          >. Use pre-made components!<br />
          It supports <span class="text-2xl underline text-[#0ea5e9]"
            ><a href="https://tailwindcss.com/">Tailwind</a></span
          >. This page is responsive!<br />
          We even have <span class="text-2xl underline text-[#61dbfb]"
            ><a href="https://react.dev">React</a></span
          >. Components can share data!<br />
        </p>
        <p>
          All this is built within <span
            class="text-2xl underline text-[#17191e]"
            ><a href="https://astro.build">Astro</a></span
          >, a web framework that focuses on:
          <ul class="list-disc list-inside pl-4">
            <li>
              Faster load times and smoother navigation improve the user
              experience.
            </li>
            <li>
              Simpler static page generation makes maintaining content-heavy
              sites easier.
            </li>
            <li>
              Lower resource usage benefits users on slower connections and less
              powerful devices.
            </li>
            <li>
              Astro reduces development complexity for static or content-focused
              websites.
            </li>
          </ul>
          <br />
          With this setup, you can use components generated by tools like
          <a href="https://v0.dev/chat" class="underline text-blue-400"
            >v0.dev</a
          >
        </p>
        <!-- START shadcn-ui demo in Astro -->
        <Alert className="my-4">
          <Terminal className="h-4 w-4" />
          <AlertTitle>Heads up!</AlertTitle>
          <AlertDescription>
            Making simpler, more maintainable codebases helps you write better
            code.
          </AlertDescription>
        </Alert>
        <div class="flex flex-row-reverse space-x-6 space-x-reverse">
          <Button className="bg-red-600">No Way</Button>
          <Button className="bg-green-400">I Agree</Button>
        </div>
        <!-- END shadcn-ui demo in Astro -->
      </figure>

      <!-- START React demo in Astro -->
      <figure
        class="w-full px-12 md:outline md:outline-1 space-y-16 md:rounded-md sm:bg-slate-200"
      >
        <CodingPractices client:load />
        <SampleReactComponent client:load />
        <TeamMembers />
      </figure>
      <!-- END React demo in Astro -->
    </div>
  </main>
</Layout>
